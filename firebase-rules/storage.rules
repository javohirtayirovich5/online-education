rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user owns the file (based on path)
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Validate image file
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024;
    }
    
    // Validate video file
    function isValidVideo() {
      return request.resource.contentType.matches('video/.*') &&
             request.resource.size < 500 * 1024 * 1024;
    }
    
    // Validate document file
    function isValidDocument() {
      return (request.resource.contentType.matches('application/pdf') ||
              request.resource.contentType.matches('application/msword') ||
              request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*') ||
              request.resource.contentType.matches('application/vnd.ms-powerpoint') ||
              request.resource.contentType.matches('application/vnd.ms-excel') ||
              request.resource.contentType.matches('text/.*')) &&
             request.resource.size < 50 * 1024 * 1024;
    }
    
    // ============================================
    // USER PROFILE PICTURES
    // ============================================
    match /users/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && isValidImage();
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // COURSE FILES (All course related files)
    // ============================================
    match /courses/{courseId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      (isValidImage() || isValidVideo() || isValidDocument());
      allow delete: if isAuthenticated();
    }
    
    // ============================================
    // LESSON FILES (Videos, Thumbnails, Documents)
    // ============================================
    match /lessons/{lessonId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      (isValidImage() || isValidVideo() || isValidDocument());
      allow delete: if isAuthenticated();
    }
    
    // ============================================
    // ASSIGNMENT FILES
    // ============================================
    // Assignment attachments (uploaded by teachers)
    match /assignments/{assignmentId}/attachments/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidDocument();
      allow delete: if isAuthenticated();
    }
    
    // Assignment submissions (uploaded by students)
    match /assignments/{assignmentId}/submissions/{studentId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(studentId) && 
                      (isValidDocument() || isValidImage());
      allow delete: if isOwner(studentId);
    }
    
    // ============================================
    // FORUM ATTACHMENTS
    // ============================================
    match /forums/{forumId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      (isValidImage() || isValidDocument()) &&
                      request.resource.size < 10 * 1024 * 1024;
      allow delete: if isAuthenticated();
    }
    
    // ============================================
    // MESSAGE ATTACHMENTS
    // ============================================
    match /messages/{conversationId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      (isValidImage() || isValidDocument()) &&
                      request.resource.size < 25 * 1024 * 1024;
      allow delete: if isAuthenticated();
    }
    
    // ============================================
    // TEMPORARY UPLOADS
    // ============================================
    match /temp/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
                      request.resource.size < 100 * 1024 * 1024;
      allow delete: if isOwner(userId);
    }

    // ============================================
    // RESOURCES FILES
    // ============================================
    match /resources/{groupId}/{subjectId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidDocument();
      allow delete: if isAuthenticated();
    }
  }
}
